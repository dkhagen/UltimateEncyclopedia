<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultimateencyclopedia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_smash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_smash_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UltimateEncyclopedia">
        <activity android:name=".home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".search.SearchActivity"
            android:theme="@style/Theme.UltimateEncyclopedia" />

        <activity
            android:name=".move.MoveListActivity"
            android:theme="@style/Theme.UltimateEncyclopedia" />

        <activity
            android:name=".ListActivityTemp"
            android:theme="@style/Theme.UltimateEncyclopedia" />

        <activity
            android:name=".move.MoveDetailActivity"
            android:theme="@style/Theme.UltimateEncyclopedia" />

        <activity
            android:name=".FavoritesActivity"
            android:theme="@style/Theme.UltimateEncyclopedia" />

        <activity
            android:name=".home.BaseActivity"
            android:theme="@style/Theme.UltimateEncyclopedia" />
    </application>

</manifest>